@model TrainerViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="../images/icon.svg" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Thambi+2:wght@400..800&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <!-- ^ Bootstrap 5.3.8 css file -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- ^ Our main css file -->
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Power fitness | Home</title>
</head>

<body>
    <div class="container">
        <main role="main" class="pb-3">

            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card shadow-lg border-0">
                            <div class="card-header bg-primary-color text-white text-center py-5">
                                <i class="bi bi-person-badge display-4 mb-3"></i>
                                <h2 class="mb-0">@Model.Name</h2>
                                <span class="badge bg-light text-primary-color mt-2">GeneralFitness Trainer</span>
                            </div>
                            <div class="card-body p-4">
                                <div class="plan-details">
                                    <div class="detail-item mb-4">
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="icon-box me-3">
                                                <i class="bi bi-envelope text-primary-color fs-4"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 text-muted">Email</h6>
                                                <p class="mb-0 fw-bold">@Model.Email</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="detail-item mb-4">
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="icon-box me-3">
                                                <i class="bi bi-telephone text-primary-color fs-4"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 text-muted">Phone</h6>
                                                <p class="mb-0 fw-bold">@Model.Phone</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="detail-item mb-4">
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="icon-box me-3">
                                                <i class="bi bi-calendar-date text-primary-color fs-4"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 text-muted">Date Of Birth</h6>
                                                <p class="mb-0 fw-bold">@Model.DateOfBirth</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="detail-item mb-4">
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="icon-box me-3">
                                                <i class="bi bi-geo-alt text-primary-color fs-4"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 text-muted">Address</h6>
                                                <p class="mb-0 fw-bold">@Model.Address</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between gap-2 px-3 pb-3">
                                        <a asp-controller="Trainer" asp-action="Index" class="btn btn-fill flex-fill">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </main>
    </div>
</body>

</html>
