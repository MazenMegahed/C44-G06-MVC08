@model HealthRecordViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="../images/icon.svg" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Thambi+2:wght@400..800&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <!-- ^ Bootstrap 5.3.8 css file -->
    <link rel="stylesheet" href="../css/bootstrap.min.css" />
    <!-- ^ Our main css file -->
    <link rel="stylesheet" href="../css/style.css" />
    <title>Power fitness | Home</title>
</head>

<body>

    <div class="container">
        <main role="main" class="pb-3">


            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card shadow">
                            <div class="card-header bg-primary-color text-white text-center py-4">
                                <h3 class="mb-1">Health Record</h3>
                            </div>

                            <div class="card-body p-4">
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="card border-0 bg-light p-4 h-100">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="bg-primary-color rounded-circle p-2 me-3"
                                                     style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                    <span class="text-white fw-bold">H</span>
                                                </div>
                                                <h6 class="text-muted mb-0">Height</h6>
                                            </div>
                                            <h4 class="text-primary-color mb-0">@Model.Height<small>cm</small></h4>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="card border-0 bg-light p-4 h-100">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="bg-primary-color rounded-circle p-2 me-3"
                                                     style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                    <span class="text-white fw-bold">W</span>
                                                </div>
                                                <h6 class="text-muted mb-0">Weight</h6>
                                            </div>
                                            <h4 class="text-primary-color mb-0">>@Model.Weight <small>kg</small></h4>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="card border-0 bg-light p-4 h-100">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="bg-danger rounded-circle p-2 me-3"
                                                     style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                    <span class="text-white fw-bold">B</span>
                                                </div>
                                                <h6 class="text-muted mb-0">Blood Type</h6>
                                            </div>
                                            <h4 class="text-danger mb-0">@Model.BloodType</h4>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card border-0 bg-light p-4 h-100">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="bg-warning rounded-circle p-2 me-3"
                                                     style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                    <span class="text-white fw-bold">N</span>
                                                </div>
                                                <h6 class="text-muted mb-0">Note</h6>
                                            </div>
                                            <h4 class="text-danger mb-0">@Model.Note</h4>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-footer bg-white border-0 p-4">
                                    <div class="d-flex justify-content-between gap-2">
                                        <a asp-controller="Member" asp-action="Index"
                                           class="btn btn-fill flex-fill">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </main>
    </div>
</body>

</html>